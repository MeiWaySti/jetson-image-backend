from flask import Flask, request, send_file, jsonify
import os

app = Flask(__name__)

# Create temp directory if it doesn't exist
os.makedirs('temp_images', exist_ok=True)

@app.route('/upload', methods=['POST'])
def receive_from_jetson():
    if 'image' not in request.files:
        return {'error': 'No image file'}, 400
    
    image = request.files['image']
    image.save('temp_images/latest.jpg')
    return {'status': 'Image received successfully'}

@app.route('/latest-image')
def get_latest_image():
    try:
        return send_file('temp_images/latest.jpg')
    except FileNotFoundError:
        return {'error': 'No image available'}, 404

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=int(os.environ.get('PORT', 5000)))
